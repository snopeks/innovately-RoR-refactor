<div class="login-container container-fluid">
  <div class="row">
    <div class="login-form col-md-12">
      <h1>Login</h1>
      <%= form_for @user, url: "/sessions", method: "post" do |f| %>
        <div>
          <%= f.text_field :email, placeholder: "Email" %>
        </div>
        <div>
          <%= f.password_field :password, placeholder: "Password" %>
        </div>
        <%= f.submit "Log In"%>
      <% end %>
    </div>
  </div>
</div>
